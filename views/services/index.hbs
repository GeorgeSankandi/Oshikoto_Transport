<!-- ========================== -->
<!-- === ALL AVAILABLE LISTINGS === -->
<!-- ========================== -->
<h3 class="section-title text-center mb-5">All Available Listings</h3>

<div class="row">
  {{#each services}}
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100 shadow-sm">
        <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}" style="height: 220px; object-fit: cover;">
         {{#if this.onSale}}
            <div class="sale-badge">SPECIAL</div>
        {{/if}}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{title}}</h5>
           {{#if this.onSale}}
                <div class="timer-container">
                    <small>Offer ends in:</small>
                    <div class="countdown-timer" data-sale-end="{{this.saleEndDate}}"></div>
                </div>
            {{/if}}
          <h6 class="card-subtitle mb-2 text-muted">{{category}}</h6>
          <p class="card-text"><strong>Rate:</strong> N$ {{price}} / day</p>
          <a href="/services/{{_id}}" class="btn btn-primary mt-auto">View Details & Rent</a>
        </div>
      </div>
    </div>
  {{else}}
    <div class="col-12 text-center py-5">
        <h4 class="text-muted">No specific services listed at the moment.</h4>
        <p>Please contact us directly for custom requests.</p>
    </div>
  {{/each}}
</div>