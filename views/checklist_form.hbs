            }
            .checklist-edit-table {
                table-layout: fixed;
                width: 100%;
                border-collapse: collapse;
                border: 1px solid black;
                flex-grow: 1; /* This makes the table grow to fill the wrapper */
            }
            /* --- END OF FIX --- */

            .checklist-edit-table th, .checklist-edit-table td { border: 1px solid black; vertical-align: middle; padding: 4px; }
            .checklist-edit-table th { background-color: #f0f0f0; text-align: center; font-size: 11px; }
            .checklist-edit-table th.col-desc { width: 40%; }
            .checklist-edit-table th.col-class { width: 10%; }
            .checklist-edit-table th.col-switch { width: 30%; }
            .checklist-edit-table th.col-arr { width: 20%; }
            
            .checklist-edit-table td.switch-td { padding: 0 !important; height: 1px; }
            .switch-cell { display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; min-height: 45px; }
            
            .toggle-switch.three-state { display: block; }
            .switch-control { position: relative; width: 100px; height: 24px; margin: 0 auto; }
            .slider { position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: #ccc; transition: .4s; border-radius: 12px; }
            .slider:before { position: absolute; content: ""; height: 18px; width: 18px; left: 3px; bottom: 3px; background-color: white; transition: .4s; border-radius: 50%; }
            .status-input { opacity: 0; width: 0; height: 0; }
            .status-ok-input:checked ~ .slider { background-color: #4CAF50; }
            .status-na-input:checked ~ .slider { background-color: #ccc; }
            .status-def-input:checked ~ .slider { background-color: #f44336; }
            .status-ok-input:checked ~ .slider:before { transform: translateX(0); }
            .status-na-input:checked ~ .slider:before { transform: translateX(38px); }
            .status-def-input:checked ~ .slider:before { transform: translateX(76px); }

            .checklist-edit-table input[type="time"] { width: 100%; border: none; text-align: center; cursor: pointer; background-color: #fff; font-size: 11px; }
