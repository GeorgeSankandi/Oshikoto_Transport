</script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('checklistForm');
        const messageArea = document.getElementById('message-area');

        // Auto-fill Date if empty
        const dateInput = form.querySelector('input[name="date"]');
        if (!dateInput.value) {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            dateInput.value = `${yyyy}-${mm}-${dd}`;
        }
        
        // 3-State Switch Click Logic
        const toggleSwitches = document.querySelectorAll('.toggle-switch.three-state');
        toggleSwitches.forEach(switchContainer => {
            const isYN = switchContainer.classList.contains('y-n-switch');
            const STATES = isYN ? ['Y', 'N/A', 'N'] : ['OK', 'N/A', 'DEF'];
            const inputs = Array.from(switchContainer.querySelectorAll('input[type="radio"]'));

            switchContainer.addEventListener('click', (e) => {
                e.preventDefault();
                let currentIndex = inputs.findIndex(input => input.checked);
                if (currentIndex === -1) currentIndex = 0; // Default to first if none checked
                const nextIndex = (currentIndex + 1) % inputs.length;
                inputs[nextIndex].checked = true;
            });
        });

        // Pre-fill Data if in Edit Mode
        if (window.savedFormData && Object.keys(window.savedFormData).length > 0) {
            const data = window.savedFormData;
            Object.keys(data).forEach(key => {
                const element = form.elements[key];
                
                if (element && typeof data[key] === 'string') {
                    if (element.type === 'radio' || (element.length && element[0].type === 'radio')) {
                         const radioToSelect = form.querySelector(`input[name="${key}"][value="${data[key]}"]`);
                         if (radioToSelect) radioToSelect.checked = true;
                    } else {
                        element.value = data[key];
                    }
                }
                else if (data[key] && typeof data[key] === 'object') {
                    if (data[key].Status) {
                        const radio = form.querySelector(`input[name="${key}"][value="${data[key].Status}"]`);
                        if (radio) radio.checked = true;
                    }
                    if (data[key].Arr) {
                        const timeInput = form.querySelector(`input[name="${key}_Arr"]`);
                        if (timeInput) timeInput.value = data[key].Arr;
                    }
                }
            });
        }

        // Form Submission Handler
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            messageArea.textContent = 'Submitting...';
            const btn = form.querySelector('button[type="submit"]');
            if(btn) btn.disabled = true;

            const data = {};
            const formData = new FormData(form);

            // This simplified loop correctly handles all fields.
            for (const [key, value] of formData.entries()) {
                if(key.endsWith('_Arr')) {
                    const baseKey = key.replace('_Arr', '');
                    data[baseKey] = data[baseKey] || {};
                    data[baseKey].Arr = value;
                } else if (value === 'OK' || value === 'N/A' || value === 'DEF' || value === 'Y' || value === 'N') {
                    // This handles radio buttons
                    data[key] = data[key] || {};
                    data[key].Status = value;
                } else if(value) {
                    data[key] = value;
                }
            }

            console.log('Data to be sent:', data);

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (response.ok) {
                    messageArea.textContent = `Success! ${result.message}`;
                    messageArea.style.color = 'green';
                    if(result.redirectUrl) {
                        setTimeout(() => window.location.href = result.redirectUrl, 1500);
                    }
                } else {
                    messageArea.textContent = `Error: ${result.message || 'Submission failed.'}`;
                    messageArea.style.color = 'red';
                    if(btn) btn.disabled = false;
                }
            } catch (error) {
                console.error('Submission failed:', error);
                messageArea.textContent = 'Network error. Submission failed.';
                messageArea.style.color = 'red';
                if(btn) btn.disabled = false;
            }
        });
    });
</script>