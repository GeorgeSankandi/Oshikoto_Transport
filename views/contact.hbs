<div class="container-fluid contact-section-body bg-electra-light py-5">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Contact Details Column -->
            <div class="col-lg-6">
                <div>
                    <h4 class="text-electra-primary">{{#if siteContent.contact_intro_title}}{{siteContent.contact_intro_title}}{{else}}Contact Us{{/if}}</h4>
                    <h1 class="display-4 mb-4">Get in Contact with Oshikoto Transport</h1>
                    <p class="mb-5">{{#if siteContent.contact_intro_desc}}{{siteContent.contact_intro_desc}}{{else}}Have questions regarding our fleet or services? Reach out to our team for professional assistance and reliable logistics solutions across Namibia.{{/if}}</p>
                    
                    <!-- Square Social Buttons -->
                    <div class="d-flex align-items-center mb-4">
                        <a class="btn btn-electra-primary btn-md-square me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-electra-primary btn-md-square me-3" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-electra-primary btn-md-square me-3" href="#"><i class="fab fa-instagram"></i></a>
                        <a class="btn btn-electra-primary btn-md-square me-0" href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>

                    <!-- Address/Info Cards -->
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="d-inline-flex bg-white w-100 p-4 shadow-sm">
                                <i class="fas fa-map-marker-alt fa-2x text-electra-primary me-4"></i>
                                <div>
                                    <h4>Address</h4>
                                    <p class="mb-0">{{#if siteContent.contact_address}}{{siteContent.contact_address}}{{else}}Windhoek, Namibia{{/if}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-6">
                            <div class="d-inline-flex bg-white w-100 p-4 shadow-sm">
                                <i class="fas fa-envelope fa-2x text-electra-primary me-4"></i>
                                <div>
                                    <h4>Mail Us</h4>
                                    <p class="mb-0">{{#if siteContent.contact_email}}{{siteContent.contact_email}}{{else}}info@oshikototransport.na{{/if}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-6">
                            <div class="d-inline-flex bg-white w-100 p-4 shadow-sm">
                                <i class="fa fa-phone-alt fa-2x text-electra-primary me-4"></i>
                                <div>
                                    <h4>Telephone</h4>
                                    <p class="mb-0">{{#if siteContent.contact_phone}}{{siteContent.contact_phone}}{{else}}+264 61 123 4567{{/if}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form Column -->
            <div class="col-lg-6">
                <div class="bg-white p-4 p-md-5 shadow-sm rounded">
                    <p class="mb-4">Send us a message and our representative will get back to you within 24 hours.</p>
                    <form>
                        <div class="row g-4">
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-1" id="name" placeholder="Your Name">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-1" id="email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="phone" class="form-control border-1" id="phone" placeholder="Phone">
                                    <label for="phone">Your Phone</label>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-1" id="subject" placeholder="Subject">
                                    <label for="subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-1" placeholder="Leave a message here" id="message" style="height: 160px"></textarea>
                                    <label for="message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheck" required>
                                    <label class="form-check-label" for="flexCheck">I agree with the site privacy policy</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-electra-primary w-100 py-3" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Full-width Map Section -->
            <div class="col-12 mt-5">
                <div class="rounded h-100 overflow-hidden shadow-sm">
                    <!-- DYNAMIC MAP IFRAME -->
                    <iframe class="w-100" style="height: 450px; border: 0;" 
                        src="https://maps.google.com/maps?q={{#if siteContent.contact_map_query}}{{siteContent.contact_map_query}}{{else}}Windhoek, Namibia{{/if}}&t=&z=13&ie=UTF8&iwloc=&output=embed" 
                        loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>